<% include ../static/partials/header.ejs %>
<% include ../static/partials/navbar.ejs %>
  <div class="container text-center">
    <h1>Mongoose: <%= mon.name %></h1>
    <img src="/img/<%= mon.img %>" alt="<%= mon.name %>'s img" class="mon-img">
    <p>Characteristic: <%= mon.characteristic %></p>
    <p>Favorite Foods: 
      <%= mon.favFoods.join(", ") %>
    </p>
    <a href="/mongooses/edit/<%= mon.id %>" class="btn btn-warning d-inline-block">Edit</a>
    <form action="/mongooses/destroy/<%= mon.id %>" method="post" class="d-inline-block">
      <button class="btn btn-danger">Destroy</button>
    </form>
  </div>
<% include ../static/partials/footer.ejs %>