<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.5/css/mdb.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <link rel="stylesheet" href="/css/style.css">
  <title>Login and Registration</title>
</head>
<body>
  <div class="container">
    <header class="text-center">
      <h1>Login and Registration</h1>
    </header>
    <form class='registration' action="/registration" method="post">
      <h2>Register</h2>
      <div class="form-group">
        <label>First name:</label>
        <% if (messages.firstName) { %>
            <% messages.firstName.forEach(msg => { %>
              <p class="alert alert-danger p-0 pl-2" role="alert"><%= msg %></p>
            <% }) %>
        <% } %>
        <input type="text" class="form-control" name="firstName" value="<%= errors.firstName %>">
      </div>
      <div class="form-group">
        <label>Last name:</label>
        <% if (messages.lastName) { %>
          <% messages.lastName.forEach(msg => { %>
            <p class="alert alert-danger p-0 pl-2" role="alert"><%= msg %></p>
          <% }) %>
        <% } %>
        <input type="text" class="form-control" name='lastName' value="<%= errors.lastName %>">
      </div>
      <div class="form-group">
        <label>Email:</label>
        <% if (messages.email) { %>
          <% messages.email.forEach(msg => { %>
            <p class="alert alert-danger p-0 pl-2" role="alert"><%= msg %></p>
          <% }) %>
        <% } %>
        <input type="text" class="form-control" name='email' value="<%= errors.email %>">
        <div class="form-group">
          <label>Password</label>
          <% if (messages.password) { %>
            <% messages.password.forEach(msg => { %>
              <p class="alert alert-danger p-0 pl-2" role="alert"><%= msg %></p>
            <% }) %>
          <% } %>
          <input type="password" class="form-control" name='password'>
        </div>
        <div class="form-group">
          <label>Confirm Password</label>
          <% if (messages.confirmPw) { %>
            <% messages.confirmPw.forEach(msg => { %>
              <p class="alert alert-danger p-0 pl-2" role="alert"><%= msg %></p>
            <% }) %>
          <% } %>
          <input type="password" class="form-control" name='confirmPw'>
        </div>
      </div>
      <button type="submit" class="btn btn-success">Register</button>
    </form>
    <form class="login" action='/login' method='post'>
      <h2>Login</h2>
      <div class="form-group">
        <label>Email:</label>
        <% if (messages.emailLog) { %>
          <% messages.emailLog.forEach(msg => { %>
            <p class="alert alert-danger p-0 pl-2" role="alert"><%= msg %></p>
          <% }) %>
        <% } %>
        <input type="text" class="form-control" name='email' value="<%= errors.emailLog %>">
      </div>
      <div class="form-group">
        <label>Password</label>
        <% if (messages.pw) { %>
          <% messages.pw.forEach(msg => { %>
            <p class="alert alert-danger p-0 pl-2" role="alert"><%= msg %></p>
          <% }) %>
        <% } %>
        <input type="password" class="form-control" name='password'>
      </div>
      <button type="submit" class="btn btn-success">Login</button>
    </form>
  </div>
  <!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.5/js/mdb.min.js"></script>
</body>
</html>